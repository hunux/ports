# description	    : C++ and QML APIs for easy inclusion of 3D graphics
# homepage	    : https://www.qt.io/
# depends	    : qt6-declarative

name=qt6-3d
version=6.3.1
release=1
source="https://download.qt.io/official_releases/qt/${version%.*}/$version/submodules/qt3d-everywhere-src-$version.tar.xz"

build() {

	cmake -S qt3d-everywhere-src-$version -B build -G Ninja \
		-D QT_USE_CCACHE=ON \
		-D INSTALL_PUBLICBINDIR=usr/bin \
		-D CMAKE_BUILD_TYPE=Release \
		-D CMAKE_CXX_FLAGS_RELEASE="$CXXFLAGS" \
		-D CMAKE_C_FLAGS_RELEASE="$CFLAGS" \
		-Wno-dev
	cmake --build build
	DESTDIR=$PKG cmake --install build
}
