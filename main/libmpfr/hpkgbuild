# description	: Functions for multiple precision math
# depends	: libgmp

name=libmpfr
version=4.1.0
release=1
source="https://www.mpfr.org/mpfr-$version/mpfr-$version.tar.xz"

build() {
	cd mpfr-$version

	./configure --prefix=/usr        \
	            --disable-static     \
	            --enable-thread-safe
	make
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share
}
